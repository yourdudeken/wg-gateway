services:
  wireguard:
    image: lscr.io/linuxserver/wireguard:latest
    container_name: wireguard
    network_mode: host
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    volumes:
      - ./wireguard:/config
      - /lib/modules:/lib/modules
    restart: unless-stopped

  # HOW TO ADD YOUR SERVICES:
  # 1. Add your service below
  # 2. Use 'network_mode: "service:wireguard"'
  # 3. Traefik on the VPS will now be able to reach your service at http://{{.Peer.WGIp}}:<your-port>
  
